<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.shopserve.dao.TypeDao">

    <resultMap type="com.example.shopserve.entity.Type" id="TypeMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="shopid" column="shopId" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TypeMap">
        select id,
               name,
               shopId
        from type
        where = #{}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TypeMap">
        select
        id, name, shopId
        from type
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="shopid != null">
                and shopId = #{shopid}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from type
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="shopid != null">
                and shopId = #{shopid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="" useGeneratedKeys="true">
        insert into type(id, name, shopId)
        values (#{id}, #{name}, #{shopid})
    </insert>

    <insert id="insertBatch" keyProperty="" useGeneratedKeys="true">
        insert into type(id, name, shopId)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.id}, #{entity.name}, #{entity.shopid})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="" useGeneratedKeys="true">
        insert into type(id, name, shopId)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.id}, #{entity.name}, #{entity.shopid})
        </foreach>
        on duplicate key update
        id = values(id),
        name = values(name),
        shopId = values(shopId)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update type
        <set>
            <if test="id != null">
                id = #{id},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="shopid != null">
                shopId = #{shopid},
            </if>
        </set>
        where = #{}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from type
        where = #{}
    </delete>

</mapper>

